@import "compass/css3";
@import "compass/typography/links/link-colors";
@import "compass/typography/lists/inline-block-list";
@import "reset";
@import "nprogres";

/*定义滚动条高宽及背景 高宽分别对应横竖滚动条的尺寸*/
::-webkit-scrollbar {
    width: 6px;
    height: 6px;
    background-color: #F5F5F5;
}

/*定义滚动条轨道 内阴影+圆角*/
::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
    border-radius: 10px;
    background-color: #F5F5F5;
}

/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, .3);
    background-color: #555;
}
body {
    background: $color-bg;
}
.fa-question-circle {
    cursor: pointer;
    margin-left: 5px;
    color: #666;

    &:hover {
        color: #333;
    }
}
.g-wrap {
    width: 1244px;
    margin: 0 auto;
    position: relative;
}
.page {
    text-align: center;
    margin-top: 20px
}
.s-dft-a {
    color: $btn-red;
    text-decoration: none;

    &:hover {
        color: $btn-red;
        text-decoration: underline;
    }
}
.s-dft-a-1 {
    color: #333;
    text-decoration: none;

    &:hover {
        color: $btn-red;
        text-decoration: underline;
    }
}
.s-dft-a-2 {
    color: $btn-red;
    text-decoration: underline;

    &:hover {
        color: $btn-red;
        text-decoration: underline;
    }
}
i.fa-search {
    cursor: pointer;
}
input[type=radio] {
    position: relative;
    *top: 1px;
    margin: 0 4px 0 0;
    *margin: 0 0 0 -4px;
}
.u-btn {
    @include inline-block;
    padding: 4px 20px;
    background: $btn;
    color: #fff;
    font-size: 14px;
    font-weight: 400;
    line-height: 1.42857143;
    text-align: center;
    background-image: none;
    border: 1px solid $btn;

    &.red {
        background-color: #fff;
        border-color: $btn-red;
        color: $btn-red;
        @include border-radius(3px);

        &:hover {
            background-color: $btn-red*0.9;
            border-color: $btn-red*0.9;
            color: #fff;
        }
    }
    &:hover {
        background-color: $btn*0.9;
        border-color: $btn*0.9;
        color: #fff;
    }
    &.gray {
        background-color: $btn-gray;
        border-color: $btn-gray;
        color: #fff;
        @include border-radius(3px);

        &:hover {
            background-color: $btn-gray*0.9;
            border-color: $btn-gray*0.9;
        }
    }
    &.yellow {
        background-color: $btn-yellow;
        border-color: $btn-yellow;
        color: #fff;

        &:hover {
            background-color: $btn-yellow*0.9;
            border-color: $btn-yellow*0.9;
        }
    }
    &.blue {
        background-color: $btn-blue;
        border-color: $btn-blue;
        color: #fff;

        &:hover {
            background-color: $btn-blue*0.9;
            border-color: $btn-blue*0.9;
        }
    }
    &.white {
        background-color: inherit;
        border-color: #fff;
        color: #fff;

        &:hover {
            background-color: #fff;
            border-color: #fff;
            color: $color;
        }
        &.inverse {
            background-color: #fff;
            color: $color;

            &:hover {
                background-color: inherit;
                border-color: #fff;
                color: #fff;
            }
        }
        &.white-2 {
            &:hover {
                background-color: inherit;
                border-color: #fff;
                color: #fff;
            }
        }
    }
    &.larger {
        width: 100%;
    }
    &.z-dis {
        background-color: $btn-gray;
        border-color: $btn-gray;
        color: $text-gray;
        cursor: default;

        &:hover {
            background-color: $btn-gray;
            border-color: $btn-gray;
        }
    }
    &.normal {
        background-color: #fff;
        border-color: $color-border;
        color: $text-gray;

        &:hover {
            background-color: #fff*0.9;
            border-color: #fff*0.9;
        }
    }
}
.u-ipt {
    width: 284px;
    height: 30px;
    line-height: 30px;
    padding: 0 8px;
    border: 1px solid $color-border;
    border-top-color: #c0c0c0;
    font-size: 14px;
    color: #777;
    background: #f3f3f3;

    &.u-ipt-1 {
        width: 120px !important;
    }
    &.u-ipt-2 {
        width: 424px !important;
    }
    &.u-ipt-3 {
        width: 180px !important;
    }
    &.u-ipt-4 {
        width: 40px !important;
    }
    &:focus {
        // outline: $color solid 1px;
        background: #fff;
    }
}
// 
.u-textarea {
    width: 414px;
    padding: 3px 8px;
    height: 63px;
    color: #777;

    &:focus {
        // outline: $color solid 1px;
    }
}
//下拉框
.u-select {
    width: 100px;
    //130
}
// 单选框 复选框
.u-radio, .u-checkbox {
    line-height: 18px;
    vertical-align: middle;

    &>label {
        display: block;
        padding-bottom: 5px;

        &.z-inline {
            @include inline-block;
        }
    }
}
// 表单

/* 简易表单 */
.m-form {
    line-height: 29px;
    color: #555;

    legend {
        font-size: 14px;
        font-weight: bold;
    }
    .formitm {
        padding: 10px 0 10px;
        line-height: 30px;
        @include clearfix();
    }
    .lab {
        float: left;
        width: 240px;
        margin-right: 40px;
        text-align: right;
        font-size: 16px;

        font {
            color: red;
            vertical-align: middle;
            padding: 0 5px;
        }
    }
    .ipt {
        margin-left: 110px;
    }
    .ipt-1 {
        margin-left: 0 !important;
    }
    .ipt * {
        vertical-align: middle;
    }
    .ipt-1 p, .ipt p {
        height: 20px;
        line-height: 20px;
        color: #999;
        font-size: 12px;
    }
    .tip {
        padding-top: 10px;
    }
    .tip input {
        margin: 0 5px 3px 0;
    }
}
.no_list {
    height: 500px;
    line-height: 500px;
    text-align: center;
    font-size: 18px;
    background: #fff;
    border: 1px dashed $color-border;
}
::selection {
    background-color: $color;
    color: #fff;
}
.form-box-ul {
    @include inline-block-list(20px);
    height: 40px;
    line-height: 40px;
    border-bottom: 1px solid $color-border;
    padding-left: 20px;
    overflow: visible;

    li {
        background-color: $color-bg-hover;
        height: 39px;
        cursor: pointer;
        border: 1px solid $color-border;
        @include border-top-left-radius(5px);
        @include border-top-right-radius(5px);

        &.z-sel, &:hover {
            border-bottom: 2px solid $color-bg-hover;
            color: $color;
        }
    }
}