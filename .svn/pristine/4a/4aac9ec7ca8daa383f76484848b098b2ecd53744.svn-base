@import "base";

.layer-list {
	padding: 20px;

	&>li {
		float: left;
		background: $color-bg-hover;
		margin-bottom: 20px;
		width: 49%;
		margin-right: 2%;

		&:nth-child(2n+2) {
			margin-right: 0;
		}
		.list-wrap {
			position: relative;
			padding: 15px;
			min-height: 120px;
			// background: #fff;
			border: 1px solid $color-border;

			.cell-name {
				padding-left: 40%;
				padding-bottom: 10px;
			}
		}
		.cell-details {
			min-height: 150px;

			.f-fl {
				width: 30%;
				min-height: 150px;

				img {
					width: 100%;
					height: 150px;
				}
			}
			.check-box {
				position: relative;

				.fa {
					position: absolute;
					left: 50%;
					top: 50px;
				}
			}
			ul.f-fl {
				width: 67%;
				padding-left: 3%;

				li {
					line-height: 30px;
				}
			}
		}
	}
}
.m-opt {
	position: absolute;
	top: 0;
	right: 0;
	height: 44px;

	.u-btn {
		line-height: 44px;
		padding-top: 0;
		padding-bottom: 0;
		float: left;
		&.blue{
			display: none;
		}
	}
}